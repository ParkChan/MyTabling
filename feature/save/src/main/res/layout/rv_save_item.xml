<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="com.chan.save.domain.Product" />

        <variable
            name="viewModel"
            type="com.chan.save.ui.SaveProductViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding">

        <ImageView
            android:id="@+id/iv_thumb"
            setGlideThumb="@{product.thumbnail}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1.5:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"
            android:gravity="center"
            android:layout_marginStart="@dimen/common_margin"
            android:text="@{product.classification}"
            android:textColor="@color/category_text_color"
            android:textSize="@dimen/common_text_size"
            app:layout_constraintBottom_toTopOf="@id/tv_name"
            app:layout_constraintStart_toEndOf="@id/iv_thumb"
            app:layout_constraintTop_toTopOf="@id/iv_thumb"
            tools:text="한식" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"
            android:gravity="center"
            android:text="@{product.restaurantName}"
            android:textColor="@color/store_common_text_color"
            android:textSize="@dimen/common_text_size"
            app:layout_constraintBottom_toTopOf="@id/tv_rating"
            app:layout_constraintStart_toStartOf="@id/tv_category"
            app:layout_constraintTop_toBottomOf="@id/tv_category"
            tools:text="함양집 종가점" />

        <TextView
            android:id="@+id/tv_rating"
            setRatingAndReviewCnt="@{product}"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"
            android:gravity="center"
            android:textColor="@color/store_common_text_color"
            android:textSize="@dimen/common_text_size"
            app:layout_constraintStart_toStartOf="@id/tv_category"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:text="별점 4.3(13)" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"
            android:gravity="center"
            android:layout_marginStart="@dimen/common_margin"
            android:text="@{product.summaryAddress}"
            android:textColor="@color/addr_text_color"
            android:textSize="@dimen/common_text_size"
            app:layout_constraintStart_toEndOf="@id/tv_rating"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:text="서현동" />

        <TextView
            android:id="@+id/tv_remote_waiting"
            setRemoteWaiting="@{product}"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"
            android:gravity="center"
            android:background="@drawable/rv_save_item_wating_rect_bg"
            android:textColor="@color/waiting_text_color"
            android:textSize="@dimen/common_text_size"
            android:paddingStart="@dimen/common_padding"
            android:paddingEnd="@dimen/common_padding"
            app:layout_constraintBottom_toBottomOf="@id/iv_thumb"
            app:layout_constraintStart_toStartOf="@id/tv_category"
            app:layout_constraintTop_toBottomOf="@id/tv_address"
            tools:text="원격 줄서기" />

        <TextView
            android:id="@+id/tv_booking"
            setUseBooking="@{product}"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.25"
            android:gravity="center"
            android:paddingStart="@dimen/common_padding"
            android:paddingEnd="@dimen/common_padding"
            android:layout_marginStart="@dimen/common_margin"
            android:background="@drawable/rv_save_item_wating_rect_bg"
            android:textColor="@color/waiting_text_color"
            android:textSize="@dimen/common_text_size"
            app:layout_constraintBottom_toBottomOf="@id/iv_thumb"
            app:layout_constraintStart_toEndOf="@id/tv_remote_waiting"
            app:layout_constraintTop_toBottomOf="@id/tv_address"
            app:layout_goneMarginStart="0dp"
            tools:text="즉시예약" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
