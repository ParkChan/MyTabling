<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/fragment_save">

    <fragment
        android:id="@+id/fragment_save"
        android:name="com.chan.save.ui.SaveFragment"
        android:label="@string/title_save"
        tools:layout="@layout/fragment_save">
        <action
            android:id="@+id/action_save_fragment_to_recent_fragment_graph"
            app:destination="@id/fragment_recent"
            />
    </fragment>

    <fragment
        android:id="@+id/fragment_recent"
        android:name="com.chan.recent.ui.RecentFragment"
        android:label="@string/title_recent"
        tools:layout="@layout/fragment_recent">
        <action
            android:id="@+id/action_recent_fragment_to_save_fragment_graph"
            app:destination="@id/fragment_save"
            app:popUpTo="@+id/fragment_save"
            app:popUpToInclusive="true"
            />

    </fragment>

</navigation>